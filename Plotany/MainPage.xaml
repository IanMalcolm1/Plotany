<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:local="clr-namespace:Plotany"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             x:Class="Plotany.MainPage"
             >

    <d:ContentPage.BindingContext>
        <local:MainPageViewModel/>
    </d:ContentPage.BindingContext>

    <Grid x:Name="MainPageContextRoot">
        <StackLayout x:Name="Test2" IsVisible="{Binding SettingName}">
            <Button Text="Create Garden"/>
            <Label Margin="0,20,0,0" HorizontalTextAlignment="Center" FontSize="16">OR</Label>
            <Entry Margin="0,10,0,0" Text="{Binding GardenName}"/>
            <Button Margin="0,10,0,0" Text="Use Existing Garden"
                Command="{Binding SetNameCommand}"/>
        </StackLayout>
    </Grid>

</ContentPage>
