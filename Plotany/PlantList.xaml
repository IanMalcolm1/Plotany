<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Plotany.PlantList"
             Title="PlantList">

    <ScrollView>
        <StackLayout>

            <Label x:Name="ResultLabel"
               FontSize="16"
               Padding="20"
               LineBreakMode="WordWrap" />

            <Button Text="Get Plants"
                Clicked="GetPlant" />

            <CollectionView x:Name="ResultsCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BackgroundColor="#eeeeee">
                            <Label Text="{Binding}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </StackLayout>
    </ScrollView>

</ContentPage>