<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:local="clr-namespace:Plotany"
             x:Class="Plotany.QuarantinesTabView">
    <ContentPage.Resources>
        <local:QuarantinesTabViewModel x:Key="QuarantinesTabViewModel" />
    </ContentPage.Resources>
    <Grid BindingContext="{StaticResource QuarantinesTabViewModel}"
          RowDefinitions="*, Auto">
        <esri:MapView Map="{Binding QuarantineMap}"/>
        <Button Grid.Row="1"
                Text="Report Pest"
                Command="{Binding OpenSurveyCommand}"/>
    </Grid>
</ContentPage>