<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Plotany.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Plotany"
    Shell.FlyoutBehavior="Disabled"
    Title="Plotany">

    <TabBar>
        <Tab Title="Home" Icon="nothing.png">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="HomePage" />
        </Tab>
        <Tab Title="Community" Icon="nothing.png">
            <ShellContent
                Title="Quarantines and Pest Reports"
                ContentTemplate="{DataTemplate local:QuarantinesTabView}"
                Route="QuarantinesPage" />
        </Tab>
    </TabBar>

</Shell>
