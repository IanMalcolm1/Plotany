<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Plotany.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Plotany"
    Shell.FlyoutBehavior="Disabled"
    Title="Plotany">

    <TabBar>
        <Tab Title="Home" Icon="nothing.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"
                          Route="HomePage" />
        </Tab>

        <Tab Title="Plants">
            <ShellContent ContentTemplate="{DataTemplate local:PlantList}"
                          Route="PlantList" />
        </Tab>

        <Tab Title="Community" Icon="nothing.png">
            <ShellContent ContentTemplate="{DataTemplate local:QuarantinesTabView}"
                          Route="QuarantinesPage" />
        </Tab>
        <Tab Title="View Garden">
            <ShellContent Title="My Garden"
                             ContentTemplate="{DataTemplate local:ViewGarden}"
                             Route="ViewGarden" />
        </Tab>
    </TabBar>

</Shell>
