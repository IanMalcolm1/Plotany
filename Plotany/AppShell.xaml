<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Plotany.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Plotany"
    Shell.FlyoutBehavior="Disabled"
    Title="Plotany">

    <TabBar>
        <Tab Title="Plots" Icon="plots_icon.png">
            <ShellContent
                Title="Home 1"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="PlotsPage" />
        </Tab>
        <Tab Title="Plots 2">
            <ShellContent
                Title="Home 2"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="View Garden">
            <ShellContent Title="My Garden"
                             ContentTemplate="{DataTemplate local:ViewGarden}"
                             Route="ViewGarden" />
        </Tab>
    </TabBar>

</Shell>
